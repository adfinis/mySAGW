# Caluma
# ------------------------------------------------------------------------------
SECRET_KEY=verysecure
ALLOWED_HOSTS=yourdomain.tld,www.yourdomain.tdl
DATABASE_PASSWORD=alsoverysecure
OIDC_USERINFO_ENDPOINT=https://yourdomain.tld/auth/realms/mysagw/protocol/openid-connect/userinfo
ADMINS=Test Example <test@example.com>,Test2 <test2@example.com>
OIDC_ADMIN_CLIENT_ID=client_id
OIDC_ADMIN_CLIENT_SECRET=verysecret
OIDC_TOKEN_ENDPOINT=https://yourdomain.tld/auth/realms/mysagw/protocol/openid-connect/token

# Minio config
MINIO_PRESIGNED_TTL_MINUTES=30
MINIO_STORAGE_ACCESS_KEY=verysecure
MINIO_STORAGE_ENDPOINT=yourdomain.tld
MINIO_STORAGE_MEDIA_BUCKET_NAME=caluma-media
MINIO_STORAGE_SECRET_KEY=verysecure
MINIO_STORAGE_USE_HTTPS=true

# Mailing
EMAIL_HOST=mail
EMAIL_PORT=25
EMAIL_HOST_USER=noreply@my.yourdomain.tld
EMAIL_HOST_PASSWORD=verysecure
EMAIL_USE_TLS=true
MAILING_FROM_NAME=mySAGW
MAILING_FROM_MAIL=noreply@my.yourdomain.tld
MAILING_SENDER="mySAGW <noreply@my.yourdomain.tld>"

# URIs
API_BASE_URI=https://my.yourdomain.tld/api/v1
SELF_URI=https://my.yourdomain.tld
