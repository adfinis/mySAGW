<h1>{{t "profile.organisation.edit"}}</h1>

<IdentityForm
  @identity={{this.model}}
  @customEndpoint="my-orgs/{{this.model.id}}"
  @cancelRouteOverride="profile"
/>

<hr>

<div uk-grid class="uk-margin-bottom">
  <div class="uk-width-1-2@m uk-width-1-3@l">
    <div class="uk-card uk-card-default uk-card-body uk-card-small">
      <IdentityAddresses @identity={{this.model}} />
    </div>
  </div>

  <div class="uk-width-1-2@m uk-width-1-3@l">
    <div class="uk-card uk-card-default uk-card-body uk-card-small">
      <IdentityEmails @identity={{this.model}} />
    </div>
  </div>

  <div class="uk-width-1-2@m uk-width-1-3@l">
    <div class="uk-card uk-card-default uk-card-body uk-card-small">
      <IdentityPhoneNumbers @identity={{this.model}} />
    </div>
  </div>

  <div class="uk-width-1-2@m">
    <div class="uk-card uk-card-default uk-card-body uk-card-small">
      <IdentityInterests @identity={{this.model}} @endpoint={{concat '/my-orgs/' this.model.id}} @profileView={{true}} />
    </div>
  </div>

  {{#if this.model.isAuthorized}}
    <div class="uk-width-1-2@m">
      <div class="uk-card uk-card-default uk-card-body uk-card-small">
        <IdentityMembers @identity={{@model}} @hideIdentityLink={{true}}/>
      </div>
    </div>
  {{/if}}
</div>
