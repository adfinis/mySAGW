<h1 class="uk-flex uk-flex-between">
  {{t "work-items.title"}}
</h1>

<hr />

<Filters as |Filter|>
  <Filter.RadioButtons
    @label={{t "work-items.filters.status"}}
    @selected={{this.status}}
    @options={{
      array
      (hash value="open" label=(t "work-items.filters.open"))
      (hash value="closed" label=(t "work-items.filters.closed"))
    }}
    @onChange={{perform this.updateFilter "status"}}
  />
  <Filter.RadioButtons
    @label={{t "work-items.filters.role"}}
    @selected={{this.role}}
    @options={{
      array
      (hash value="active" label=(t "work-items.filters.active"))
      (hash value="control" label=(t "work-items.filters.control"))
    }}
    @onChange={{perform this.updateFilter "role"}}
  />
  <Filter.Dropdown
    @label={{t "work-items.filters.taskTypes"}}
    @selected={{this.selectedTaskTypes}}
    @options={{this.allTaskTypes.value}}
    @onChange={{perform this.updateFilter "taskTypes"}}
  />
  <Filter.Identity
    @onChange={{perform this.updateFilter "identities"}}
    @selectedIdentities={{this.selectedIdentities}}
  />
  <Filter.Input
    @label={{t "work-items.filters.documentNumber"}}
    @value={{this.documentNumber}}
    @onChange={{perform this.updateFilter "documentNumber"}}
  />
  <Filter.Input
    @label={{t "work-items.filters.answer" }}
    @value={{this.answerSearch}}
    @onChange={{perform this.updateFilter "answerSearch"}}
  />
</Filters>

{{#if this.workItemsFilter.value}}
  <WorkItemList
    @query={{this.workItemsQuery}}
    @config={{this.tableConfig}}
    @setOrder={{fn (mut this.order)}}
    @order={{this.order}}
  />
{{/if}}
