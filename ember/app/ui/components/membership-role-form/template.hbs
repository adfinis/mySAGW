<div
  {{did-insert this.onUpdate}}
  {{did-update this.onUpdate @role}}
>
  {{#if this.changeset}}
    <ValidatedForm
      @model={{this.changeset}}
      @on-submit={{perform this.submit}}
      class="uk-margin-remove-last-child"
      as |Form|
    >
      <Form.input
        @label={{t "component.membership-role-form.label.title"}}
        @name="title"
      />

      <Form.input
        @label={{t "component.membership-role-form.label.description"}}
        @name="description"
      />

      <p class="uk-text-right">
        <LinkTo
          class="uk-button uk-button-default"
          @route="membership-roles"
        >
          {{t "component.membership-role-form.control.cancel"}}
        </LinkTo>

        <Form.submit
          @label={{t "component.membership-role-form.control.submit"}}
        />
      </p>
    </ValidatedForm>
  {{/if}}
</div>
