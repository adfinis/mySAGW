<div
  {{did-insert this.onUpdate}}
  {{did-update this.onUpdate @identity}}
>
  {{#if this.model}}
    <ValidatedForm
      @model={{changeset this.model this.validations}}
      @on-submit={{perform this.submit}}
      as |Form|
    >
      <Form.input
        @label={{t "component.interest-category-form.label.title"}}
        @name="title"
      />

      <Form.input
        @label={{t "component.interest-category-form.label.description"}}
        @name="description"
        @required={{false}}
      />

      <p class="uk-text-right">
        <LinkTo
          class="uk-button uk-button-default"
          @route="interests"
        >
          {{t "component.interest-category-form.control.cancel"}}
        </LinkTo>

        <Form.submit
          @label={{t "component.interest-category-form.control.submit"}}
        />
      </p>
    </ValidatedForm>
  {{/if}}
</div>
