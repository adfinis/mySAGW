<div class="uk-margin-small-right uk-width-medium">
  <label class="uk-display-block">
    {{t "documents.filters.identity"}}
    <PowerSelectMultiple
      @options={{this.selectedIdentities.value}}
      @selected={{this.selectedIdentityOptions}}
      @onChange={{@onChange}}
      @searchEnabled={{true}}
      @search={{perform this.search}}
      @loadingMessage={{t "components.filters.dropdown.loading"}}
      @searchMessage={{t "components.filters.dropdown.search"}}
      @noMatchesMessage={{t "components.filters.dropdown.empty"}}
      as |option|
    >
      {{option.label}}
    </PowerSelectMultiple>
  </label>
</div>
