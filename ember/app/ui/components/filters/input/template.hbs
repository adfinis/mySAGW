<div ...attributes>
  <label class="uk-display-block">
    <span>
      {{@label}}
      {{#if @invertedIcon}}
        <UkIcon
          @icon="warning"
          @ratio="0.8"
          uk-tooltip={{t "components.filters.inverted"}}
        />
      {{/if}}
    </span>
    <Input @value={{@value}} class="uk-input" {{on "input" @onChange}} />
  </label>
  {{#if @invertFilter}}
    <label>
      <Input
        class="uk-checkbox"
        @type="checkbox"
        @checked={{@inverted}}
        {{on "click" @invertFilter}}
      />
      {{t "components.filters.invert"}}
    </label>
  {{/if}}
</div>