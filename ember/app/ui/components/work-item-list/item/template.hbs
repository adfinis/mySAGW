<tr class={{this.highlightClasses}}>
  {{#each @columns as |column|}}
    <td class={{column}}>
      {{#if (eq column "task")}}
        {{#if @highlight}}
          <span class="uk-padding-remove-horizontal uk-text-center"></span>
        {{/if}}
        {{#if @workItem.document}}
          <LinkTo
            @route="cases.detail.work-items.edit.form"
            @models={{array @workItem.case.id @workItem.id}}
          >
            {{@workItem.name}}
          </LinkTo>
        {{else}}
          {{@workItem.name}}
        {{/if}}
      {{else if (eq column "case")}}
        <LinkTo
          @route="cases.detail"
          @model={{@workItem.case.id}}
        >
          {{@workItem.case.document.form.name}}
        </LinkTo>
      {{else if (and (eq column "deadline") @workItem.raw.deadline)}}
        <span title={{format-date @workItem.deadline day="2-digit" month="2-digit" year="numeric"}}>
          {{moment-from @workItem.deadline}}
        </span>
      {{else if (eq column "responsible")}}
        {{@workItem.responsible}}
      {{else if (eq column "closedAt")}}
        {{format-date
          @workItem.closedAt
          day="2-digit"
          month="2-digit"
          year="numeric"
          hour="2-digit"
          minute="2-digit"
          hour12=false
        }}
      {{else if (eq column "closedBy")}}
        {{if @workItem.closedByUser @workItem.closedByUser.fullName "-"}}
      {{else if (eq column "caseCreatedBy")}}
        {{this.caseCreatedBy.fullName}}
      {{else if (eq column "status")}}
        {{@workItem.statusName}}
      {{else if (eq column "documentNumber")}}
        <LinkTo @route="cases.detail" @model={{@workItem.case.id}}>
          {{@workItem.case.document.answers.edges.firstObject.node.value}}
        </LinkTo>
      {{/if}}
    </td>
  {{/each}}
  <td class="uk-padding-remove-horizontal uk-text-center">
    {{#if this.actions.length}}
      <ContextMenu @actions={{this.actions}} />
    {{/if}}
  </td>
</tr>
