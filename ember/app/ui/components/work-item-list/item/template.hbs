<tr class={{this.highlightClasses}}>
  {{#if @highlight}}
    <td></td>
  {{/if}}
  {{#each @columns as |column|}}
    <td class={{column}}>
      {{#if (eq column "task")}}
        {{#if @workItem.document}}
          <LinkTo
            @route="cases.detail.work-items.edit.form"
            @models={{array @workItem.case.id @workItem.id}}
          >
            {{@workItem.name}}
          </LinkTo>
        {{else}}
          <LinkTo
            @route="cases.detail.work-items.edit.index"
            @models={{array @workItem.case.id @workItem.id}}
          >
            {{@workItem.name}}
          </LinkTo>
        {{/if}}
      {{else if (eq column "instance")}}
        <LinkTo
          @route="cases.detail"
          @model={{@workItem.case.id}}
        >
          {{@workItem.case.document.form.name}}
        </LinkTo>
      {{else if (eq column "deadline")}}
        <span title={{format-date @workItem.deadline day="2-digit" month="2-digit" year="numeric"}}>
          {{moment-from @workItem.deadline}}
        </span>
      {{else if (eq column "responsible")}}
        {{@workItem.responsible}}
      {{else if (eq column "closedAt")}}
        {{format-date
          @workItem.closedAt
          day="2-digit"
          month="2-digit"
          year="numeric"
          hour="2-digit"
          minute="2-digit"
          hour12=false
        }}
      {{else if (eq column "closedBy")}}
        {{if @workItem.closedByUser @workItem.closedByUser.fullName "-"}}
      {{else if (eq column "description")}}
        <span title={{@workItem.instanceDescription}}>{{@workItem.instanceDescription}}</span>
      {{/if}}
    </td>
  {{/each}}
  <td>
    {{#if this.actions.length}}
      <ContextMenu @actions={{this.actions}} />
    {{/if}}
  </td>
</tr>
