<td
  class={{
    concat
    (if @tdDefinition.truncate "uk-text-truncate")
    " "
    (join " " @tdDefinition.classList)
  }}
  uk-tooltip={{if @tdDefinition.truncate this.value}}
>
  {{#let (component this.componentName value=@value) as |Content|}}
    {{#if @tdDefinition.linkTo}}
      <LinkTo
        @route={{@tdDefinition.linkTo}}
        @model={{this.linkToModel}}
        class="uk-text-bold uk-text-primary"
      >
        <Content @value={{this.value}} />
      </LinkTo>
    {{else}}
      <Content @value={{this.value}} />
    {{/if}}
  {{/let}}
</td>
