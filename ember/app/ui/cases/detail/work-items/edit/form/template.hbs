<h3>{{@model.name}}</h3>

<CfContent
  @documentId={{@model.document.id}}
  @disabled={{not @model.canEdit}}
  as |content|
>
  <DocumentValidity
    @document={{content.document}}
    @validateOnEnter={{false}}
    as |isValid validate|
  >
    {{#if (gt content.document.fieldsets.length 1)}}
      <div uk-grid>
        <div class="uk-width-1-1 uk-width-1-3@m">
          <content.navigation />
        </div>
        <div class="uk-width-1-1 uk-width-2-3@m">
          <content.form />
          <hr />
          <content.pagination />
        </div>
      </div>
    {{else}}
      <content.form />
    {{/if}}

    {{#if @model.canComplete}}
      {{#if this.showTaskButton}}
        <UkButton
          @type="button"
          @onClick={{fn (mut this.confirmModal) true}}
          @color="primary"
        >
          {{t "work-items.actions.finish"}}
        </UkButton>

        <UkModal
          @visible={{this.confirmModal}}
          @onHide={{fn (mut this.confirmModal) false}}
          as |modal|
        >
          <modal.header>
            <h2 class="uk-modal-title">{{t "work-items.actions.finish"}}</h2>
          </modal.header>
          <modal.body>
            <p>{{t "work-items.actions.confirmation"}}</p>
          </modal.body>
          <modal.footer class="uk-text-right">
            <UkButton
              @type="button"
              @onClick={{fn (mut this.confirmModal) false}}
              @color="default"
            >
              {{t "global.cancel"}}
            </UkButton>
            <TaskButton
              @mutation="complete"
              @type="submit"
              @color="primary"
              @label={{t "work-items.actions.finish"}}
              @beforeMutate={{validate}}
              @onSuccess={{this.transitionToCaseWorkItems}}
              @task="additional-data"
              @filters={{this.taskButtonFilters}}
            />
          </modal.footer>
        </UkModal>
      {{else}}
        <WorkItemButton
          @mutation="complete"
          @workItemId={{@model.id}}
          @type="submit"
          @color="primary"
          @label={{t "work-items.actions.finish"}}
          @beforeMutate={{validate}}
          @onSuccess={{this.transitionToCaseWorkItems}}
        />
      {{/if}}
    {{/if}}
    {{#if @model.canSkip}}
      <WorkItemButton
        @mutation="skip"
        @workItemId={{@model.id}}
        @type="submit"
        @label={{t "work-items.actions.skip"}}
        @beforeMutate={{validate}}
        @onSuccess={{this.transitionToCaseWorkItems}}
      />
    {{/if}}
    {{#if @model.canRedo}}
      <WorkItemButton
        @mutation="skip"
        @workItemId={{@model.id}}
        @type="submit"
        @label={{t "work-items.actions.redo"}}
      />
    {{/if}}
  </DocumentValidity>
</CfContent>